<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.thesis.luna.vacationtracker.RecordFromListview"
    android:weightSum="1"
    android:orientation="vertical"
    android:background="@drawable/trees">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:orientation="vertical">
            <!-- Displays text Enter text on the screen -->

            <TextView
                android:id="@+id/Iamat"
                android:layout_width="396dp"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="I am at... "
                android:textAlignment="viewStart"
                android:textSize="30sp"
                android:textColor="@color/white"
                />

            <TextView
                android:id="@+id/placeT"
                android:layout_width="match_parent"
                android:layout_height="67dp"
                android:fontFamily="serif"
                android:text="Text"
                android:textAlignment="viewStart"
                android:textSize="30sp"
                android:textStyle="italic"
                android:textColor="@color/white"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/addressT"
                    android:layout_width="164dp"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="ADDRESS"
                    android:textAllCaps="false"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    />

                <TextView
                    android:id="@+id/actualAddress"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="serif"
                    android:text="TextView"
                    android:textAlignment="center"
                    android:textSize="30sp"
                    android:textStyle="italic"
                    android:textColor="@color/white"
                    />


            </LinearLayout>

            <TextView
                android:id="@+id/noteT"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="serif"
                android:text="TextView"
                android:textSize="30sp"
                android:textColor="@color/white"
                />

            <ImageView
                android:id="@+id/imageViewHere"
                android:layout_width="match_parent"
                android:layout_height="324dp" />


        </LinearLayout>




    </ScrollView>


</LinearLayout>
